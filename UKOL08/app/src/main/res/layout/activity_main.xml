<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etJmeno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jméno"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"/>

    <EditText
        android:id="@+id/etVek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Věk"
        app:layout_constraintTop_toBottomOf="@id/etJmeno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"/>
    <CheckBox
        android:id="@+id/cbPotvrzeni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Potvrzuji, že jsem 18+"
        app:layout_constraintTop_toBottomOf="@id/etVek"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/btnUlozit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uložit"
        app:layout_constraintTop_toBottomOf="@id/cbPotvrzeni"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnNacist"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnNacist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Načíst"
        app:layout_constraintTop_toBottomOf="@id/cbPotvrzeni"
        app:layout_constraintStart_toEndOf="@id/btnUlozit"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>