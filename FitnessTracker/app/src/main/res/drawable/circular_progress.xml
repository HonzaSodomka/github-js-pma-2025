<?xml version="1.0" encoding="utf-8"?>
<!--
    Custom kruhový progress bar s gradientem
    - Šedý background ring
    - Modrý gradient pro progress (sweep gradient)
    - Začíná nahoře díky rotate 270°
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pozadí (šedý kruh) -->
    <item>
        <shape android:shape="ring"
            android:thickness="12dp"
            android:useLevel="false">
            <solid android:color="#E0E0E0" />
        </shape>
    </item>

    <!-- Popředí (Gradient progress) -->
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">

            <shape
                android:shape="ring"
                android:thickness="12dp"
                android:useLevel="true">

                <gradient
                    android:startColor="#4F46E5"
                    android:endColor="#06B6D4"
                    android:type="sweep"
                    android:useLevel="false" />

                <corners android:radius="12dp"/>
            </shape>
        </rotate>
    </item>

</layer-list>