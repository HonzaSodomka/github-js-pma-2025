<?xml version="1.0" encoding="utf-8"?>
<!--
    Aktivita pro záznam probíhajícího tréninku
    - CoordinatorLayout + AppBar pro správné scrollování
    - Timer nahoře (počítá čas tréninku)
    - EditText pro název tréninku (auto-naming)
    - RecyclerView s cviky (každý cvik má své série)
    - Tlačítko "Přidat cvik"
    - Tlačítka "Zrušit" a "Dokončit" v toolbaru
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- AppBar (průhledný, bez elevation) -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- TLAČÍTKO ZRUŠIT (TextView, ne ImageButton) -->
                <TextView
                    android:id="@+id/btnClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zrušit"
                    android:textColor="#EF4444"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- Spacer (vyplní prostor mezi tlačítky) -->
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>

                <!-- TLAČÍTKO DOKONČIT -->
                <Button
                    android:id="@+id/btnFinish"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="DOKONČIT"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="#1F2937"
                    app:cornerRadius="18dp"
                    android:layout_marginEnd="16dp"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollovatelný obsah -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="48dp">

            <!-- NÁZEV TRÉNINKU (editovatelný) -->
            <!-- Placeholder "Dnešní trénink" se auto-nahradí podle cviků -->
            <EditText
                android:id="@+id/etWorkoutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dnešní trénink"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:background="@android:color/transparent"
                android:inputType="textCapWords"
                android:layout_marginTop="4dp"/>

            <!-- TIMER (00:00 formát, live counting) -->
            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="14sp"
                android:textColor="#4F46E5"
                android:textStyle="bold"
                android:background="@drawable/bg_badge_light"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"/>

            <!-- RECYCLERVIEW S CVIKY -->
            <!-- Každá položka = 1 cvik s jeho sériemi -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvExercises"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

            <!-- TLAČÍTKO PŘIDAT CVIK -->
            <Button
                android:id="@+id/btnAddExercise"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="+ PŘIDAT CVIK"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#4F46E5"
                app:cornerRadius="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>