<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true"> <!-- TOTO ŘEŠÍ VÝŘEZ/NOTCH -->

    <!-- Header Sekce -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Galerie"
            android:textAllCaps="true"
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:letterSpacing="0.15"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tvoje Proměna"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="#1F2937"/>
    </LinearLayout>

    <!-- Mřížka fotek -->
    <!-- clipToPadding="false" zajistí, že se obsah skroluje i POD paddingy -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPhotos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- EMPTY STATE (Zobrazí se, když nejsou fotky) -->
    <LinearLayout
        android:id="@+id/llEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_camera"
            app:tint="#9CA3AF"
            android:alpha="0.5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zatím žádné fotky"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4B5563"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vyfoť se a začni sledovat progres!"
            android:textSize="14sp"
            android:textColor="#9CA3AF"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Tlačítko přidat -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PŘIDAT FOTKU"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:icon="@android:drawable/ic_menu_camera"
        app:iconTint="@color/white"
        app:backgroundTint="#4F46E5"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
