<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout pro jednu fotku v galerii (grid 3 sloupce)
    - CardView s fotkou (centerCrop pro správné zobrazení)
    - Datum badge v rohu (glassmorphism styl)
    - Kliknutí = full-screen detail
-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- FOTKA (centerCrop = vyplní celou plochu, ořízne přebytky) -->
        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="#E5E7EB"/>

        <!-- DATUM BADGE (glassmorphism - průhledný černý background) -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#CC000000"
            app:cardElevation="0dp"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Datum text (bílý text, velká písmena) -->
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12. LED"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>