<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true">

    <!-- Nadpis -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Můj Profil"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Avatar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/avatarCard"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_avatar_circle">

            <TextView
                android:id="@+id/tvInitials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Jméno (Input) -->
    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Jméno a Příjmení"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:minWidth="200dp"
        android:padding="8dp"
        android:inputType="textPersonName|textCapWords"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/avatarCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Email (Zobrazení) -->
    <TextView
        android:id="@+id/tvEmailDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#6B7280"
        android:background="#10000000"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        app:layout_constraintTop_toBottomOf="@id/etName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Kartička se statistikami -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvEmailDisplay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="24dp"
            android:baselineAligned="false">

            <!-- Věk -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Věk"
                    android:textColor="#9CA3AF"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"/>
                <EditText
                    android:id="@+id/etAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:gravity="center"
                    android:minWidth="40dp"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="#E5E7EB"/>

            <!-- Start -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:textColor="#9CA3AF"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"/>
                <EditText
                    android:id="@+id/etStartWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:background="@android:color/transparent"
                    android:inputType="numberDecimal"
                    android:minWidth="30dp"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="#E5E7EB"/>

            <!-- Cíl -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cíl"
                    android:textColor="#4F46E5"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"/>
                <EditText
                    android:id="@+id/etTargetWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#4F46E5"
                    android:background="@android:color/transparent"
                    android:inputType="numberDecimal"
                    android:minWidth="30dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tlačítko Uložit -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:text="ULOŽIT ZMĚNY"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        android:textColor="@color/white"
        app:backgroundTint="#4F46E5"
        app:layout_constraintTop_toBottomOf="@id/statsCard"/>

    <!-- Logout -->
    <TextView
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odhlásit se"
        android:textColor="#EF4444"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
