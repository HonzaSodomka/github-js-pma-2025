<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout pro kategorii cviků (group item)
    Podobný styl jako item_workout_history.xml
-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Ikona činky (stejná jako workout history) -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_workouts"
                app:tint="#4F46E5"
                android:layout_marginEnd="12dp"/>

            <!-- Název kategorie -->
            <TextView
                android:id="@+id/tvCategoryName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Hrudník"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#1F2937"/>

            <!-- Badge s počtem cviků -->
            <TextView
                android:id="@+id/tvCategoryCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#6B7280"
                android:background="#F3F4F6"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"/>

            <!-- Šipka expand/collapse -->
            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/arrow_down_float"
                app:tint="#4F46E5"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>